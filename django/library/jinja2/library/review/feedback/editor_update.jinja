{% extends 'base.jinja' %}
{% from 'library/review/includes/macros.jinja' import display_reviewer_feedback %}

{% block introduction %}
    <h1>Computational Model Library Peer Review: Editor</h1>
{% endblock %}

{% block content %}
    <h2>Editor Peer Review Management</h2>
    <p class='lead'>
    Feedback submitted by <mark>{{review_feedback.invitation.reviewer.member_profile}}</mark> on {{format_datetime(review_feedback.last_modified)}}.
    </p>
    <h2>{{ review_feedback.invitation.review.title }}<a href="{{ review_feedback.invitation.review.codebase_release.share_url }}">(click to view in a new window/tab)</a>
    </h2>
    <mark>
    {{ display_reviewer_feedback(review_feedback, include_private=true) }}
    </mark>
    <h2>Editor Form</h2>
    <form method="post">
        {% include 'includes/form.jinja' %}
        <p class="text-muted">Reviewer recommendation: <span class="badge bg-info">{{ review_feedback.recommendation }}</span></p>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}
